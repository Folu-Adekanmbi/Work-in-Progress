//F is front, B is back, R is right, L is left, D is drive, S is speed for these pin assignments
#define FRD1 13
#define FRD2 12
#define FLD1 8
#define FLD2 7
#define BRD1 11
#define BRD2 10
#define BLD1 6
#define BLD2 5
#define S

void motorForward (int m1, int m2) {
  digitalWrite(m1, HIGH);
  digitalWrite(m2, LOW);
// controlling speed with PWM
  analogWrite(enablePin, 125); 
}

void motorBackward (int m1, int m2) {
  digitalWrite(m1, LOW);
  digitalWrite(m2, HIGH);
// controlling speed
  analogWrite(enablePin, 125);
}

void motorStop (int m1, int m2) {
  digitalWrite(m1, LOW);
  digitalWrite(m2, LOW);
}

void driveForward () {
motorForward(FRD1,FRD2);
motorForward(FLD1,FLD2);
motorForward(BRD1,BRD2);
motorForward(BLD1,BLD2);
}
void driveBackwards () {
motorBackward(FRD1,FRD2);
motorBackward(FLD1,FLD2);
motorBackward(BRD1,BRD2);
motorBackward(BLD1,BLD2);
}
void strafeLeft () {
motorBackward(FLD1,FLD2);
motorForward(FRD1,FRD2);
motorBackward(BRD1,BRD2);
motorForward(BLD1,BLD2);
// check if it makes sense plss
}

void strafeRight () {
motorForward(FLD1, FLD2);
motorBackward(FRD1, FRD2);
motorForward(BRD1, BRD2);
motorBackward(BLD1, BLD2);
}

void rotateCW () {
motorForward(FLD1, FLD2);
motorForward(BLD1, BLD2);
motorBackward(FRD1, FRD2);
motorBackward(BRD1, BRD2);
}

void rotateCCW () {
motorBackward(FLD1, FLD2);
motorBackward(BLD1, BLD2);
motorForward(FRD1, FRD2);
motorForward(BRD1, BRD2);
}


/*setup code:
pinMode (FRD1, output)
pinMode (FRD2, output)
pinMode (BRD1, output)
pinMode (BRD2, output)
pinMode (FLD1, output)
pinMode (FLD2, output)
pinMode (BLD1, output)
pinMode (BLD2, output)
pinMode (S, output)'
*/



